</head><br /><br />
<table border="1" cellspacing="20" cellpadding="10" style="background-color:lightgoldenrodyellow">
    @using (Html.BeginForm("InsertPatient", "Home", FormMethod.Post))
    {
        <tr>
            <td colspan="2"><center><b>Patient Details</b></center></td>

        </tr>
        <tr>
            <td><b>First Name:</b></td>
            <td>@Html.TextBoxFor(m => m.FirstName )</td>
        </tr>
        <tr>
            <td><b>Last Name</b></td>
            <td>@Html.TextBoxFor(m => m.LastName)</td>
        </tr>
        <tr>
            <td><b>Sex:</b></td>
            <td>
                @Html.RadioButtonFor(m => m.Sex, "Male")Male<hr />
                @Html.RadioButtonFor(m => m.Sex, "Female")Female<hr />

                @Html.RadioButtonFor(m => m.Sex, "Others")Others
            </td>
        </tr>
        <tr>
            <td><b>Age</b></td>
            <td>@Html.TextBoxFor(m => m.Age)</td>
        </tr>
        <tr>
            <td><b>Date Of Birth</b></td>
            <td><input asp-for="DateofBirth" type="date" class="form-control" /></td>
        </tr>
        <tr>
            <td colspan="2" align="center"><input type="submit" value="Submit" /></td>
        </tr>





    }
</table>
