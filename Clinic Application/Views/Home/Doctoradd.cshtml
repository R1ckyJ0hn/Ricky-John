@model ClinicDeskApplication.Models.Doctor
<style>
    body {
        background-image: url("https://i0.wp.com/ese224.seas.upenn.edu/wp-content/uploads/2018/11/background-website-light-blue-wallpapers-background-2.jpg?ssl=1");
        background-size:cover
    }
    .button1 {
        background-color: white;
        color: red;
        border: groove;
        padding: 10px 20px;
        border-color: red;
    }

        .button1:hover {
            background-color: red;
            color: white;
            border: white;
        }

    .button {
        background-color: cornsilk;
        padding: 10px 20px;
        color: darkblue;
        border: groove;
    }

        .button:hover {
            background-color: darkblue;
            color: white;
            border: white;
        }
    
</style>

<head>

    <div style="background-color:bisque">




        
            <table cellpadding="10" align="center" style="background-color:lightgoldenrodyellow">

                <tr>
                    <td><b>Navigation menu</b></td>
                    <td style="background-color:deepskyblue">
                        @using (Html.BeginForm("DoctorAdd", "Home", FormMethod.Post))

                        {
                            <button class="button" type="submit" name="AddDoctor">Add Doctor</button>
                        }
                    </td>








                    <td>
                        @using (Html.BeginForm("PatientAdd", "Home", FormMethod.Post))

                        {
                            <button class="button" type="submit" name="AddDoctor">Add Patient</button>
                        }
                    </td>







                    <td>
                        @using (Html.BeginForm("Scheduleapp", "Home", FormMethod.Post))

                        {
                            <button class="button" type="submit" name="AddDoctor">Schedule Appointments</button>
                        }
                    </td>






                    <td>
                        @using (Html.BeginForm("Viewappoint", "Home", FormMethod.Post))

                        {
                            <button class="button" type="submit" name="AddDoctor">View Appointments</button>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post))

                        {
                            <button class="button1" type="submit" name="AddDoctor">Log Out</button>
                        }
                    </td>
                </tr>

            </table>
        </div>

    


</head>
<body>
   
    <table border="1" cellpadding="10" style="background-color:lightgoldenrodyellow">
        @using (Html.BeginForm("InsertDoctor", "Home", FormMethod.Post))
        {
            <tr >
                <th colspan="2"><center>Doctor Details</center></th>

            </tr>
            <tr>
                <td><b>First Name:</b></td>
                <td>@Html.TextBoxFor(m => m.FirstName)</td>
            </tr>
            <tr>
                <td><b>Last Name</b></td>
                <td>@Html.TextBoxFor(m => m.LastName)</td>
            </tr>
            <tr>
                <td><b>Sex:</b></td>
                <td>@Html.RadioButtonFor(m => m.Sex, "Male")Male<hr />
                @Html.RadioButtonFor(m => m.Sex, "Female")Female<hr />
                
                @Html.RadioButtonFor(m => m.Sex, "Others")Others</td>
            </tr>
            <tr rowspan="6" border="1">
                <td><b>Specialisation:</b></td>
            
            <td>@Html.RadioButtonFor(m => m.Specialization, "General")General<hr />
            
                @Html.RadioButtonFor(m => m.Specialization, "Internal Medicine")Internal Medicine<hr />
            
            
               @Html.RadioButtonFor(m => m.Specialization, "Pediatrics") Pediatrics<hr />
            
            
                @Html.RadioButtonFor(m => m.Specialization, "Orthopedics") Orthopedics<hr />
            
            
                @Html.RadioButtonFor(m => m.Specialization, "Opthalmology") Ophthalmology</td>
            </tr>
            
            <tr>
                <td><b>Visiting Hours:</b></td>
                <td>
                    @Html.RadioButtonFor(m => m.VisitingHours, "1PM-5PM")1PM-5PM
            </td>
            <td>@Html.RadioButtonFor(m => m.VisitingHours, "5PM-9PM")5PM-9PM</td>

            </tr>

            <tr>

                <td colspan="2"><center><input type="submit" value="Submit" /></center></td>
            </tr>

            }
        </table>
</body>